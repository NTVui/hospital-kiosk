mixin progressbar(currentStep, totalSteps=4)
  .progress-container
    each n in [...Array(totalSteps).keys()].map(i => i+1)
      if n < currentStep
        .circle.active âœ”
      else if n == currentStep
        .circle.active #{n}
      else
        .circle #{n}
    .progress-bar
      - const percent = ((currentStep - 1) / (totalSteps - 1)) * 100
      .indicator(style=`width: ${percent}%`)
