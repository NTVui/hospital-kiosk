extends ../../layouts/default.pug

block main
  .kiosk-progress
    ul.progress-steps
      li.step.active(data-step="1") Bước 1: Kiểm tra CCCD
      li.step(data-step="2") Bước 2: Nhập thông tin
      li.step(data-step="3") Bước 3: Xác nhận

  .kiosk-content
    h2 Kiểm tra CCCD
    form#checkCccdForm(method="POST", action="/kiosk/step1/check-cccd")
      .form-group
        label(for="cccd") Nhập số CCCD:
        input#cccd.form-control(type="text", name="cccd", placeholder="Nhập 12 số CCCD")
      button.btn.btn-primary(type="submit") Kiểm tra
